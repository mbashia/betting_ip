<h1>Listing Sports</h1>

<%= if @live_action in [:new, :edit] do %>
  <.modal return_to={Routes.sport_index_path(@socket, :index)}>
    <.live_component
      module={BettingSystemWeb.SportLive.FormComponent}
      id={@sport.id || :new}
      title={@page_title}
      action={@live_action}
      sport={@sport}
      user = {@user}
      return_to={Routes.sport_index_path(@socket, :index)}
    />
  </.modal>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
            <th>status</th>


      <th></th>
    </tr>
  </thead>
  <tbody id="sports">
    <%= for sport <- @sports do %>
      <tr id={"sport-#{sport.id}"}>
        <td><%= sport.name %></td>

        <td><%= sport.description %></td>
                <td><%= sport.active %></td>


        <td>
          <span><%= live_redirect "Show", to: Routes.sport_show_path(@socket, :show, sport) %></span>
          <span><%= live_patch "Edit", to: Routes.sport_index_path(@socket, :edit, sport) %></span>
          <span><%= link "Delete", to: "#", phx_click: "delete", phx_value_id: sport.id, data: [confirm: "Are you sure?"] %></span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<span><%= live_patch "New Sport", to: Routes.sport_index_path(@socket, :new) %></span>
